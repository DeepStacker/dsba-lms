# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_DB=apollo_lms
POSTGRES_USER=lmsadmin
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://lmsadmin:change_me_in_production@localhost/apollo_lms

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Tokens (Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-prod-only
JWT_EXPIRES_MIN=15
REFRESH_EXPIRES_DAYS=7

# Password Hashing (Argon2)
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Environment Settings
ENVIRONMENT=development

# CORS Origins (for development)
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Trusted Hosts (for production)
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_TOKEN=internal_token_change_me_production

# External API Keys (Optional)
OPENAI_API_KEY=
HF_TOKEN=

# Redis Lock Settings
LOCK_DEFAULT_DAYS=7
WEEKLY_LOCK_SATURDAY=true

# Feature Flags
FEATURE_AI=true
FEATURE_TELEMETRY=true

# Admin User (for initial setup)
ADMIN_EMAIL=admin@yourinstitution.edu
ADMIN_PASSWORD=temp_password_change_immediately
ADMIN_NAME=System Administrator

# SMTP Settings (Optional - for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True
FROM_EMAIL=noreply@yourinstitution.edu
FROM_NAME=Apollo LMS

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["pdf", "doc", "docx", "txt", "jpg", "png", "jpeg"]

# Proctoring Settings
ENABLE_PROCTORING=false
PROCTORING_THRESHOLD=0.8
SCREEN_CAPTURE_INTERVAL=30

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Security
SECRET_KEY=your-secret-key-change-this-production
ENCRYPTION_KEY=32-character-encryption-key-here

# Optional: External Services
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=
# PUSHOVER_API_KEY=
# TELEGRAM_BOT_TOKEN=

# Development Only (remove in production)
DEBUG=True
CORS_ALLOW_ALL=true